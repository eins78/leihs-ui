{
  "name": "leihs-ui",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "postinstall": "cd bootstrap-theme-leihs && { npm ci || npm i ;}",
    "dev": "node server.js",
    "prebuild": "cd bootstrap-theme-leihs && npm run build",
    "build": "next build",
    "build-lib": "rm -rf dist && NODE_ENV=production npx webpack --config ./webpack.config.js && rm dist/*.html dist/*.json dist/*.map dist/precache-manifest.* dist/service-worker.js",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint --fix 'src/{,**/}*.js{,x}' && npm run -s lint:json",
    "ci:lint": "eslint 'src/{,**/}*.js{,x}' && npm run -s ci:lint:json",
    "lint:json": "prettier --write 'src/{,**/}*.json'",
    "ci:lint:json": "prettier --list-different 'src/{,**/}*.json'",
    "test-lib": "node -p 'window=this; l = require(\"./dist/leihs-ui-server-side.js\"); l.renderComponentToStaticMarkup(\"Navbar\", {})'",
    "test": "react-scripts test --env=jsdom"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.4",
    "@fortawesome/free-regular-svg-icons": "^5.3.1",
    "@fortawesome/free-solid-svg-icons": "^5.3.1",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "@zeit/next-css": "^1.0.1",
    "bootstrap-theme-leihs": "file:bootstrap-theme-leihs",
    "color": "^3.1.0",
    "lodash": "^4.17.11",
    "next": "^7.0.2",
    "node-sass": "^4.9.4",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "reactstrap": "^6.5.0"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.0.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-react-app": "^3.0.4",
    "eslint-plugin-prettier": "^2.6.2",
    "prettier": "^1.14.0",
    "prettier-eslint": "^8.8.2",
    "react-scripts": "^2.0.5",
    "react-test-renderer": "^16.6.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "react"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "prettier",
      "prettier/react",
      "prettier/standard",
      "plugin:react/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "src/components/Bootstrap.js"
        ],
        "rules": {
          "react/prop-types": "error"
        }
      }
    ]
  }
}
