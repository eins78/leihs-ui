{
  "name": "leihs-ui",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "preinstall": "cd bootstrap-theme-leihs && { test -d node_modules && npm i || { npm ci || npm i ;} ;}",
    "dev": "node server.js",
    "build": "npm run -s build:theme && npm run -s build:lib && npm run -s build:next",
    "build:next": "next build",
    "build:theme": "cd bootstrap-theme-leihs && npm run build",
    "build:lib": "rm -rf dist && NODE_ENV=production npx webpack --config ./webpack.config.js && rm dist/*.html dist/*.json dist/precache-manifest.* dist/service-worker.js",
    "build-lib": "npm run -s build:lib",
    "watch-lib": "rm -rf dist && NODE_ENV=development npx webpack --watch --info-verbosity verbose --config ./webpack.config.js",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint --fix 'src/{,**/}*.js{,x}' && npm run -s lint:json",
    "ci:lint": "eslint 'src/{,**/}*.js{,x}' && npm run -s ci:lint:json",
    "lint:json": "prettier --write 'src/{,**/}*.json'",
    "ci:lint:json": "prettier --list-different 'src/{,**/}*.json'",
    "test-lib": "node -p 'window=this; l = require(\"./dist/leihs-ui-server-side.js\"); l.renderComponentToStaticMarkup(\"Navbar\", {})'",
    "test": "react-scripts test --env=jsdom"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.15",
    "@fortawesome/free-regular-svg-icons": "^5.7.2",
    "@fortawesome/free-solid-svg-icons": "^5.7.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@zeit/next-css": "^1.0.1",
    "color": "^3.1.0",
    "lodash": "^4.17.11",
    "next": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "reactstrap": "^6.5.0"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.2.5",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react-hooks": "^1.1.0-rc.0",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "react-scripts": "^2.1.5",
    "react-test-renderer": "^16.8.2",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "react",
      "react-hooks"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "prettier",
      "prettier/react",
      "prettier/standard",
      "plugin:react/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react-hooks/rules-of-hooks": "error",
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "src/components/Bootstrap.js"
        ],
        "rules": {
          "react/prop-types": "error"
        }
      }
    ]
  }
}
